---
import H2 from "./H2.astro";
interface Props {
	title: string;
	description: string;
	href: string;
	img: string;
}

const { href, title, description, img } = Astro.props;
---

<li class="w-[47.5%] h-[35rem] relative">
	<a class="w-full h-full" href={href}>
		<div
			class="w-full h-full absolute rounded-[4rem]"
			style="background: linear-gradient(180deg, rgba(158,208,255,0) 0%, rgba(0, 0, 0, 0.785) 100%);">
		</div>
		<img class="w-full h-full text-white object-cover rounded-[4rem] shadow-md" src=`${img}` />
		<div class="absolute bottom-0 p-12 text-white flex flex-col gap-3">
			<H2 title={title} />
			<p class="text-xl font-normal">
				{description}
			</p>
		</div>
	</a>
</li>
